<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_option"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:text="@string/home_screen"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/home_icon" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/lock_option"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:text="@string/lock_screen"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/lock_icon" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/home_lock_option"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:text="@string/home_lock_screen"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/home_lock_icon" />

</LinearLayout>